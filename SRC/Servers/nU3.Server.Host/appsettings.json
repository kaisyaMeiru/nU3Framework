{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  
  "ServerSettings": {
    "FileTransfer": {
      "HomeDirectory": "D:\\nU3_Framework_Server_Storage\\Server_Storage",
      "MaxUploadSizeMB": 500,
      "AllowedExtensions": [ ".pdf", ".jpg", ".png", ".doc", ".docx", ".xls", ".xlsx", ".txt", ".log", ".gz" ]
    },
    "LogUpload": {
      "LogStoragePath": "D:\\nU3_Framework_Server_Storage\\ServerLogs\\ClientLogs",
      "AuditStoragePath": "D:\\nU3_Framework_Server_Storage\\ServerLogs\\ClientAudits",
      "MaxLogSizeMB": 100,
      "EnableCompression": true,
      "AutoCleanupDays": 120
    },
    "Database": {
      "Provider": "Sqlite",
      "DbDirectory": "D:\\nU3_Framework_Server_Storage\\Server_Database",
      "Connections": {
        "Oracle": "Data Source=localhost:1521/ORCL;User Id=nu3_user;Password=nu3_password;",
        "Sqlite": "Data Source=nu3_framework.db;",
        "MariaDb": "Server=localhost;Database=nu3;User=root;Password=pass;"
      },
      "CommandTimeout": 30,
      "MaxRetryCount": 3
    }
  },
  
  "Cors": {
    "AllowedOrigins": [ "http://localhost:*", "https://localhost:*" ],
    "AllowCredentials": true
  },
  
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 100,
    "WindowMinutes": 1
  },
  
  "ApiVersioning": {
    "DefaultVersion": "1.0",
    "AssumeDefaultVersionWhenUnspecified": true,
    "ReportApiVersions": true
  },
  
  "Swagger": {
    "Enabled": true,
    "Title": "nU3 Server API",
    "Description": "REST API for nU3 Framework - Database Access, File Transfer, and Log Upload Services",
    "Version": "v1",
    "RoutePrefix": "swagger",
    "EnableAnnotations": true,
    "IncludeXmlComments": true
  }
}
