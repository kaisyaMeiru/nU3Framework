{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Diagnostics": "Information"
    }
  },

  "AllowedHosts": "*",

  "ServerSettings": {
    "FileTransfer": {
      "HomeDirectory": "D:\\nU3_Framework_Server_Storage\\Server_Storage",
      "MaxUploadSizeMB": 500,
      "AllowedExtensions": [ ".pdf", ".jpg", ".png", ".doc", ".docx", ".xls", ".xlsx", ".txt", ".log", ".gz" ]
    },
    "LogUpload": {
      "LogStoragePath": "D:\\nU3_Framework_Server_Storage\\ServerLogs\\ClientLogs",
      "AuditStoragePath": "D:\\nU3_Framework_Server_Storage\\ServerLogs\\ClientAudits",
      "MaxLogSizeMB": 100,
      "EnableCompression": true,
      "AutoCleanupDays": 120
    },
    "Database": {
      "Provider": "Sqlite",
      "DbDirectory": "D:\\nU3_Framework_Server_Storage\\Server_Database",
      "Connections": {
        "Oracle": "Data Source=localhost:1521/ORCL;User Id=nu3_user;Password=nu3_password;",
        "Sqlite": "Data Source=nu3_framework.db;",
        "MariaDb": "Server=localhost;Database=nu3;User=root;Password=pass;"
      },
      "CommandTimeout": 30,
      "MaxRetryCount": 3
    }
  },

  "Swagger": {
    "Enabled": true,
    "Title": "nU3 Server API (Development)",
    "Description": "Development REST API for nU3 Framework - Database Access, File Transfer, and Log Upload Services",
    "Version": "v1-dev",
    "RoutePrefix": "swagger",
    "EnableAnnotations": true,
    "IncludeXmlComments": true
  },

  "DetailedErrors": true
}