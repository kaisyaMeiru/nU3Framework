{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Diagnostics": "Information"
    }
  },
  
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost:1521/ORCL;User Id=dev_user;Password=dev_password;",
    "SqliteConnection": "Data Source=./nu3_dev.db;",
    "MariaDbConnection": "Server=localhost;Database=nu3_dev;User=root;Password=dev_pass;"
  },

  "Database": {
    "Provider": "Oracle"
  },
  
  "ServerSettings": {
    "FileTransfer": {
      "HomeDirectory": "D:\\nU3_Framework_Server_Storage",
      "MaxUploadSizeMB": 500,
      "AllowedExtensions": [ "*" ]
    },
    "LogUpload": {
      "LogStoragePath": "D:\\nU3_Framework_Server_Storage\\ClientLogs",
      "AuditStoragePath": "D:\\nU3_Framework_Server_Storage\\ClientAudits",
      "MaxLogSizeMB": 100,
      "EnableCompression": true,
      "AutoCleanupDays": 7
    }
  },
  
  "Swagger": {
    "Enabled": true,
    "Title": "nU3 Server API (Development)",
    "Description": "Development REST API for nU3 Framework - Database Access, File Transfer, and Log Upload Services",
    "Version": "v1-dev",
    "RoutePrefix": "swagger",
    "EnableAnnotations": true,
    "IncludeXmlComments": true
  },
  
  "DetailedErrors": true
}
